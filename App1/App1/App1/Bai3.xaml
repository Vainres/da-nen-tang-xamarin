<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Bai3">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Frame  Padding="24" CornerRadius="0">
                <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" FontAttributes="Bold" TextColor="Black" FontSize="36"/>
            </Frame>
            <Entry VerticalOptions="CenterAndExpand" Placeholder="Name"></Entry>
            <Entry VerticalOptions="CenterAndExpand" Keyboard="Email" Placeholder="Email"></Entry>
            <Entry VerticalOptions="CenterAndExpand" Keyboard="Telephone" Placeholder="PhoneNumber"></Entry>
            <Entry VerticalOptions="CenterAndExpand" Placeholder="Password" IsPassword="True"></Entry>
            <Entry VerticalOptions="CenterAndExpand" Placeholder="Confirm Password" IsPassword="True"></Entry>
            <Button Text="Submit" Margin="30" Clicked="Button_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>